<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zondy.mapgis.system.mapper.SysDiskMapper">

    <resultMap type="SysDisk" id="SysDiskResult">
        <result property="diskId" column="disk_id"/>
        <result property="speed" column="speed"/>
        <result property="readwrite" column="readwrite"/>
        <result property="time" column="time"/>
    </resultMap>

    <sql id="selectSysDiskVo">
        select disk_id, speed, readwrite, time
        from sys_disk
    </sql>

    <select id="selectRecentSysDiskWithinTime" resultMap="SysDiskResult">
        <include refid="selectSysDiskVo"/>
        <where>
            <if test="readwtire != null">
                and readwtire = #{readwrite}
            </if>
            <if test="time != null">
                <choose>
                    <when test="_databaseId == 'sqlite'">
                        and time &gt; #{time}
                    </when>
                    <otherwise>
                        and date_format(time,'%y%m%d %H:%i:%S') &gt; date_format(#{time},'%y%m%d %H:%i:%S')
                    </otherwise>
                </choose>
            </if>
        </where>
        order by time desc limit 0,1
    </select>

    <select id="selectRecentSysDiskBetweenTime" resultMap="SysDiskResult">
        <include refid="selectSysDiskVo"/>
        <where>
            <if test="readwtire != null">
                and readwtire = #{readwrite}
            </if>
            <if test="time != null">
                <choose>
                    <when test="_databaseId == 'sqlite'">
                        and time &gt; #{beginTime}
                    </when>
                    <otherwise>
                        and date_format(time,'%y%m%d %H:%i:%S') &gt; date_format(#{beginTime},'%y%m%d %H:%i:%S')
                    </otherwise>
                </choose>
            </if>
            <if test="time != null">
                <choose>
                    <when test="_databaseId == 'sqlite'">
                        and time &lt;= #{endTime}
                    </when>
                    <otherwise>
                        and date_format(time,'%y%m%d %H:%i:%S') &lt;= date_format(#{endTime},'%y%m%d %H:%i:%S')
                    </otherwise>
                </choose>
            </if>
        </where>
        order by time desc limit 0,1
    </select>

    <select id="selectSysDiskList" parameterType="SysDisk" resultMap="SysDiskResult">
        <include refid="selectSysDiskVo"/>
        <where>
            <if test="speed != null ">
                and speed = #{speed}
            </if>
            <if test="readwrite != null ">
                and readwrite = #{readwrite}
            </if>
            <if test="params.beginTime != null and params.beginTime != ''"><!-- 开始时间检索 -->
                <choose>
                    <when test="_databaseId == 'sqlite'">
                        and time &gt;= #{params.beginTime}
                    </when>
                    <otherwise>
                        and date_format(time,'%y%m%d %H:%i:%S') &gt;= date_format(#{params.beginTime},
                        '%y%m%d %H:%i:%S')
                    </otherwise>
                </choose>
            </if>
            <if test="params.endTime != null and params.endTime != ''"><!-- 结束时间检索 -->
                <choose>
                    <when test="_databaseId == 'sqlite'">
                        and time &lt;= #{params.endTime}
                    </when>
                    <otherwise>
                        and date_format(time,'%y%m%d %H:%i:%S') &lt;= date_format(#{params.endTime},
                        '%y%m%d %H:%i:%S')
                    </otherwise>
                </choose>
            </if>
        </where>
    </select>

    <insert id="insertSysDisk" parameterType="SysDisk" useGeneratedKeys="true" keyProperty="diskId">
        insert into sys_disk
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="speed != null">speed,</if>
            <if test="readwrite != null">readwrite,</if>
            <if test="time != null">time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="speed != null">#{speed},</if>
            <if test="readwrite != null">#{readwrite},</if>
            <if test="time != null">
                <choose>
                    <when test="_databaseId == 'sqlite'">
                        datetime(#{time} / 1000,'unixepoch','localtime')
                    </when>
                    <otherwise>
                        #{time}
                    </otherwise>
                </choose>
            </if>
        </trim>
    </insert>

    <delete id="clearExpired">
        delete
        from sys_memory
        <where>
            <choose>
                <when test="_databaseId == 'sqlite'">
                    and time &lt; datetime(CURRENT_TIMESTAMP,'localtime','-90 day')
                </when>
                <otherwise>
                    and date_format(time,'%y%m%d') &lt; date_format(date_sub(sysdate(),INTERVAL 90 DAY),'%y%m%d')
                </otherwise>
            </choose>
        </where>
    </delete>
</mapper>